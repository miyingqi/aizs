<Window x:Class="FloatBall.Fball"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FloatBall" 
        Height="60" Width="60"
        WindowStyle="None"      
        AllowsTransparency="True" 
        Background="Transparent"
        Topmost="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        ShowInTaskbar="False" MouseLeftButtonUp="Window_MouseLeftButtonUp">
    <Canvas>
        <Grid MouseRightButtonDown="Ball_m_right_down" Name="ball_grid" Width="61" Height="61"  Canvas.Right="0"
            MouseEnter="ball_MouseEnter" >
            <Ellipse Name="ball"
                 Fill="DodgerBlue" 
                 Opacity="0.7"
                 Cursor="Hand" Margin="3,2,3,3" 
                 
                     >
                <Ellipse.Effect>
                    <DropShadowEffect BlurRadius="10" 
                                  ShadowDepth="0" 
                                  Color="Gray"/>
                </Ellipse.Effect>
            </Ellipse>

            <TextBlock Text="⚪" 
                   FontSize="24"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="White"/>
            <TextBox Name="msgbox" 
                Width="80" Height="20" 
                FontSize="10" Margin="-80,20,61,21"
                Visibility="Collapsed"/>
            <Button x:Name="send_btn" 
                Margin="9,20,10,21"
                Background="Transparent"
                BorderBrush="Transparent"
                Foreground="White"
                Opacity="0.7" Visibility="Collapsed">
                <TextBlock Text="send"/>
            </Button>
            <Grid.ContextMenu >
                <ContextMenu Name="ballContextMenu" >
                    <MenuItem Header="主页面" Click="MenuItem1_Click"/>
                    <MenuItem Header="聊天" Click="MenuItem2_Click"/>
                    <MenuItem Header="设置" Click="MenuItem3_Click"/>
                    <Separator/>
                    <MenuItem Header="退出" Click="ExitMenuItem_Click"/>
                </ContextMenu>
            </Grid.ContextMenu>
        </Grid>
    </Canvas>
</Window>